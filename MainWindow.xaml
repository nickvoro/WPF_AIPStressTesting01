<Window x:Class="WPF_AIPStressTesting01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="350" Width="525">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
                   Margin="5"
                   HorizontalAlignment="Right"
                   Name="TextMachineQuantity"
                   Text="Machine Quantity"
                   VerticalAlignment="Center" />
        <xctk:ButtonSpinner Grid.Column="1"
                            Spin="ButtonSpinner_Spin"
                            Margin="5"
                            Height="22"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            KeyDown="ButtonSpinner_KeyDown"
                            KeyUp="ButtonSpinner_KeyUp"
                            Name="SpinnerMachineQuantity">
            <TextBox Text="1"
                     IsReadOnly="False"
                     HorizontalContentAlignment="Right"
                     VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     Name="TextBoxMachineQuantity" />
        </xctk:ButtonSpinner>
    </Grid>
</Window>
